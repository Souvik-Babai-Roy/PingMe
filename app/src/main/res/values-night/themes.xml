<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PingMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/colorOnTertiary</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/colorOnTertiaryContainer</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorSurfaceDim">@color/colorSurfaceDim</item>
        <item name="colorSurfaceBright">@color/colorSurfaceBright</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        
        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item>
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorOnPrimary</item>
        
        <!-- Menu styling -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle.Dark</item>
        <item name="android:textColorPrimaryInverse">@color/colorOnPrimary</item>
        <item name="android:textColorSecondaryInverse">@color/colorOnPrimary</item>
        
        <!-- Action bar theme -->
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <!-- Material Design 3 specific attributes -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/colorOnErrorContainer</item>
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>
        <item name="colorInverseSurface">@color/md_sys_color_inverse_surface</item>
        <item name="colorInverseOnSurface">@color/md_sys_color_inverse_on_surface</item>
        <item name="colorInversePrimary">@color/md_sys_color_inverse_primary</item>
        <item name="colorSurfaceTint">@color/md_sys_color_surface_tint</item>
        <item name="colorShadow">@color/md_sys_color_shadow</item>
        <item name="colorScrim">@color/md_sys_color_scrim</item>
    </style>
    
    <!-- Dark Toolbar Style -->
    <style name="ToolbarStyle.Dark" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="subtitleTextColor">@color/colorOnPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- Dark Overflow Menu Style -->
    <style name="OverflowMenuStyle.Dark" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/surface_color</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Enhanced Tab Text Style for Dark Theme -->
    <style name="TabTextStyle.Dark" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Enhanced Button Styles for Dark Theme -->
    <style name="PrimaryButton.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="elevation">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SecondaryButton.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Enhanced Input Field Style for Dark Theme -->
    <style name="InputFieldStyle.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Enhanced Card Style for Dark Theme -->
    <style name="CardStyle.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Enhanced FAB Style for Dark Theme -->
    <style name="FabStyle.Dark" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">8dp</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- Material Design 3 specific styles for Dark Theme -->
    <style name="Material3Card.Dark" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Material3Button.Dark" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Material3ButtonOutlined.Dark" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>